        xmlns:local="clr-namespace:WpfApp2.Excel1"
        mc:Ignorable="d"
        Title="Loan Estimate" Height="450" Width="800">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">




        <TabControl>
            <TabItem Header="Input Form">
                <Grid>
                    <Label Content="BORROWER and LOAN INFORMATION" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Height="35" Width="268" FontWeight="Bold" FontSize="14"/>
